@using Myweb.Domain.Models.Entities
@using MyWeb2023.Areas.Admin.Models.Dto
@model List<BannerDto>

<script>
    function reloadPage() {
        window.location.reload()
    }
    function DeleteBanners(id) {
        axios.post('/Banners/DeleteBanners', {
            'id': id
        }, {

            headers: {
                'content-type': 'application/x-www-form-urlencoded'
            }
        })
            .then(function (response) {
                console.log(response);
                reloadPage();
            })
    }
    function confirmDelete(id) {
        console.log("confirmDelete", id);
        Swal.fire({
            title: 'You want to delete ?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                DeleteBanners(id);
            }
        })
    }
</script>

<div class="card">
    <div class="card-header">
        <h5>Banner Management</h5>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-sm-3">
                <a href="/Admin/Banners/Create" class="btn btn-success btn-sm">Create</a>
            </div>
        </div>
    </div>
   
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>IsActive</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <th scope="row">1</th>
                            <td><img src="@item.Image" width="100" height="50" /></td>
                            <td>@item.Title</td>
                            @if (item.IsActive)
                            {
                                <td><span class="badge badge-success">Display</span></td>
                            }
                            else
                            {
                                <td><span class="badge badge-danger">Hide</span></td>
                            }

                            <td>
                                <a href="/Admin/Banners/Update/@item.Id" type="button" class="btn btn-info btn-sm">Edit</a>
                                <input form="form-delete-@item.Id" name="Id" value="@item.Id" type="hidden" />
                                <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id')">Delete</button>
                            </td>
                            <form id="form-delete-@item.Id" action="@Url.Action("Delete","Banners")" method="post">
                            </form>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
