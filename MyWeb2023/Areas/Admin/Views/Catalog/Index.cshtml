@using MyWeb2023.Areas.Admin.Models.Dto;
@using Myweb.Domain.Models.Entities;
@model List<Catalog>

<script>
    function reloadPage() {
        window.location.reload()
    }
    function DeleteCatalog(id) {
        axios.post('/Catalog/DeleteCatalog', {
            'id': id
        }, {

            headers: {
                'content-type': 'application/x-www-form-urlencoded'
            }
        })
            .then(function (response) {
                console.log(response);
                reloadPage();
            })
    }
    function confirmDelete(id) {
        console.log("confirmDelete", id);
        Swal.fire({
            title: 'You want to delete ?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                DeleteCatalog(id);
            }
        })
    }
</script>

<div class="card">
    <div class="card-header">
        <h5>Catalog Management</h5>
    </div>

    <div class="card-block">
        <div class="row">
            <div class="col-sm-3">
                <a href="/Admin/Catalog/Create" class="btn btn-success btn-sm">Create</a>
            </div>
        </div>
    </div>

    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Image</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var stt = 0;
                    }
                    @foreach (var item in Model)
                    {
                        stt = stt + 1;
                        <tr>
                            <th scope="row">@stt</th>
                            <td><image href=" @item.Image"></image></td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>
                                <a href="/Admin/Catalog/Update/@item.Id" type="button" class="btn btn-info btn-sm">Edit</a>

                                <input form="form-delete-@item.Id" name="Id" value="@item.Id" type="hidden" />
                                <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id')">Delete</button>
                            </td>
                            <form id="form-delete-@item.Id" action="@Url.Action("Delete","Catalog")" method="post">
                            </form>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
