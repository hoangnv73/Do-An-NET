 @using Myweb.Domain.Models.Entities
@using MyWeb2023.Areas.Admin.Models.Dto
@model List<UserDto>

<script>
    function resetPassword(id) {
        axios.post('/users/ResetPassword', {
            'id': id
        }, {
            headers: {
                'content-type': 'application/x-www-form-urlencoded'
            }
        })
            .then(function (response) {
                console.log(response);
                Swal.fire(
                    'Success!',
                    'Password new: ' + response.data,
                    'success'
                )
            })
            .catch(function (error) {
                console.log(error);
                Swal.fire(
                    'Error!',
                    'Error!',
                    'error'
                )
            });
    }
    function reloadPage() {
        window.location.reload()
    }
    function deleteUser(id) {
        axios.post('/users/DeleteUser', {
            'id': id
        }, {

            headers: {
                'content-type': 'application/x-www-form-urlencoded'
            }
        })
            .then(function (response) {
                console.log(response);
                reloadPage();
            })
    }
    function confirmDelete(id) {
        console.log("confirmDelete",id);
        Swal.fire({
            title: 'Do you want to delete ?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'OK'
        }).then((result) => {
            if (result.isConfirmed) {
                deleteUser(id);
            }
        })
    }
</script>

<div class="card">
    <div class="card-header">
        <h5>Users Management</h5>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-sm-3">
                <a href="/Admin/Users/Create" class="btn btn-success btn-sm">Create</a>
            </div>
        </div>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Avatar</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Role</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var stt = 0;
                    }
                    @foreach (var item in Model)
                    {
                        stt = stt + 1;
                        <tr>
                            <th scope="row">@stt</th>
                            <td><img src="@item.Image" width="50" height="50" /></td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.GenderName</td>
                            <td>@item.RoleName</td>
                            <td>
                                <button class="btn btn-info btn-sm" onclick="resetPassword('@item.Id')">Reset</button>
                                <a href="/Admin/Users/Update/@item.Id" type="button" class="btn btn-info btn-sm">Edit</a>
                                <input form="form-delete-@item.Id" name="Id" value="@item.Id" type="hidden" />
                                <button class="btn btn-danger btn-sm" onclick="confirmDelete('@item.Id')">Delete</button>
                            </td>
                            <form id="form-delete-@item.Id" action="@Url.Action("Delete","Users")" method="post">
                            </form>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
