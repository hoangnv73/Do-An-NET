@using MyWeb2023.Areas.Admin.Models.Dto;

<div class="card">
    <div class="card-header">
        <h5>Add Coupon</h5>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-sm-3"> </div>
            <div class="col-sm-6">
                <form method="post" action="/Admin/Coupon/Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Coupon Code <span class="text-danger">*</span></label>
                                <input name="couponCode" type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <label>Expired <span class="text-danger">*</span></label>
                                <input name="expired" type="date" class="form-control" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Value <span class="text-danger">*</span></label>
                                <input name="value" type="text" class="form-control" required>
                            </div>
                            <div class="col-sm-4">
                                <label>Quantity <span class="text-danger">*</span></label>
                                <input name="quantity" type="text" class="form-control" required>
                            </div>
                            <div class="col-sm-4">
                                <label>TypeId <span class="text-danger">*</span></label>
                                <input name="typeId" type="text" class="form-control" required>
                            </div>
                        </div>


                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-info">Create</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-3"> </div>
        </div>
        <div>
            <a type="button" href="/Admin/Coupon" class="btn btn-default">Back</a>
        </div>
    </div>
</div>

