    }
</script>

<div class="card">
    <div class="card-header">
        <h5>Quản Lý Người Dùng</h5>
    </div>
    <div class="col-sm-3">
        <a href="/Users/Create" class="btn btn-success btn-sm">Create</a>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Avatar</th>
                        <th>FirstName</th>
                        <th>LastName</th>
                        <th>Email</th>
                        <th>Gender</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">1</th>
                            <td><img src="@@item.Avatar" width="50" height="50" /></td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.Email</td>
                            <td>@item.GenderName</td>
                            <td>
                                <button class="btn btn-info" onclick="resetPassword('@item.Id')">Reset Password</button>
                                <a href="/Users/Update/@item.Id" type="button" class="btn btn-info btn-sm">Edit</a>
                                <input form="form-delete-@item.Id" name="Id" value="@item.Id" type="hidden" />
                                <button form="form-delete-@item.Id" type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </td>
                            <form id="form-delete-@item.Id" action="@Url.Action("Delete","Users")" method="post">
                            </form>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
