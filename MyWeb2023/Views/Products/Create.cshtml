@using MyWeb2023.Models.Dto;
@{
    List<ComboboxDto> brands = ViewBag.Brands;
}

<div class="card">
    <div class="card-header">
        <h5>Tạo Sản Phẩm</h5>
    </div>
    <div class="card-block">
        <div class="row">
            <div class="col-sm-3"> </div>
            <div class="col-sm-6">
                <form method="post" action="/Products/Create" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Tên sản phẩm <span class="text-danger">*</span></label>
                        <input name="name" type="text" class="form-control" required>

                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <label>Giá <span class="text-danger">*</span></label>
                                <input name="price" type="text" class="form-control" required>
                            </div>
                            <div class="col-sm-4">
                                <label>Tỷ lệ giảm giá:</label>
                                <input name="discount" type="text" class="form-control">
                            </div>
                            <div class="col-sm-4">
                                <label>Ngày hết hạn:</label>
                                <input name="ab" type="date" class="form-control">
                            </div>
                        </div>

                    </div>
                    <div class="form-group">
                        <label>Thương hiệu</label>
                        <select class="form-control" name="brand">
                            <option value="">Chọn</option>
                            @{
                                foreach (var item in brands)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <br />
                        <input name="status" value="true" type="radio" />
                        <span>Còn hàng</span>
                        <input name="status" value="false" type="radio" />
                        <span>Hết hàng</span>
                    </div>
                    <div class="form-group">
                        <input name="file" type="file" />
                    </div>
                    <div class="form-group text-right">
                        <button type="submit" class="btn btn-info">Create</button>
                    </div>
                </form>
            </div>

            <div class="col-sm-3"> </div>
        </div>
        <div>
            <a type="button" href="/Products" class="btn btn-default">Back</a>
        </div>
    </div>
</div>
@*Url.Action("Create","Products")*@
